@model IEnumerable<Manage.IBLL.Dto.FlowStepInfo>
@{
    ViewBag.Title = "FlowStep";
    Layout = "~/Views/Shared/_LayoutBasicChild.cshtml";
}

<h2>流程步骤</h2>
<h3>当前流程：<span style="color:red;">@ViewBag.FlowName</span></h3>
<hr />
<input type="hidden" id="VerifyKey" value="@ViewBag.VerifyKey" />
<div class="easyui-panel" style="padding:5px;background:#f0f0f0;padding:10px;text-align:left">
    <a href="###" id="add" class="easyui-linkbutton" data-options="iconCls:'icon-add'">添加步骤</a>
    <div style="float:right;">
        <a href="###" id="submit" class="easyui-linkbutton" data-options="iconCls:'icon-ok'">提交</a>
        <a href="IndexQuery" id="submit" class="easyui-linkbutton" data-options="iconCls:'icon-cancel'">取消</a>
    </div>
</div>
<table id="tblFlowStep">
    @if (Model != null)
    {
        <tr>
            <th>序号</th>
            <th>步骤名</th>
            <th>步骤编号</th>
            <th>步骤描述</th>
            <th>角色</th>
            <th>操纵</th>
        </tr>

        var index = 1;
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @index
                </td>
                <td>
                    <input name="Name" id="Name-@index" value="@item.Name" class="easyui-textbox" style="width:100%;height:32px" />
                </td>
                <td>
                    <input name="Step" id="Step-@index" value="@item.Step" class="easyui-numberbox" style="width:100%;height:32px" />
                </td>
                <td>
                    <input name="Description" id="Description-@index" value="@item.Description" class="easyui-textbox" style="width:100%;height:32px" />
                </td>
                <td>
                    <input class="easyui-combobox" id="role-@index" name="StepRole" style="height:32px" value="@item.StepRole" />
                </td> 
                <td>
                    <a href="###" name="delete" class="easyui-linkbutton" data-options="iconCls:'icon-cancel'">删除</a>
                </td>
            </tr>
            index++;
        }
    }
</table>

@section script{
<script src="~/LocalScript/VerifyFlow/FlowStep.js"></script>
}