    <style>
        html, body {
            width:100%;
            height:100%;
        }
        .container{
            width:90%;
            height:100%;
            margin:auto;
        }
    </style>
    @RenderSection("style", false)
</head>
<body>
    <div class="container">
        @RenderBody()
    </div>
    @RenderSection("script", false)
</body>
</html>
