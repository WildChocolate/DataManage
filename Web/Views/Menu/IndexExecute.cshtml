@model Manage.IBLL.Dto.MenuInfo
@{
    ViewBag.Title = "IndexManage";
    Layout = "~/Views/Shared/_LayoutBasicChild.cshtml";
}
@section style{
    <link href="~/LocalCSS/Menu/IndexExecute.css" rel="stylesheet" />
}
<h2>菜单管理---@ViewBag.Operation</h2>
<hr />
<div>

    <form id="menuform">
        <div class="easyui-panel" title="@ViewBag.Operation">
            <div style="padding:10px 60px 20px 60px">
                <input type="hidden" name="Key" value="@Model.Key" />
                <input type="hidden" name="ParentName" value="@Model.ParentName" />
                <table cellpadding="5" cellspacing="5" style="width:100%;height:100%;">
                    <tr>
                        <td>菜单名:</td>
                        <td><input id="Name" class="easyui-textbox" type="text" name="Name" data-options="required:true" value="@Model.Name" /></td>
                    </tr>
                    <tr>
                        <td>菜单描述:</td>
                        <td><input id="Description" class="easyui-textbox" type="text" name="Description" data-options="multiline:true" style="height:80px" value="@Model.Description" /></td>
                    </tr>
                    <tr>
                        <td>是否厅级菜单</td>
                        <td><input id="IsTop" class="checkbox" type="checkbox" name="IsTop" checked="@Model.IsTop" /></td>
                    </tr>
                    <tr>
                        <td>Controller</td>
                        <td><input id="Controller" class="easyui-textbox" type="text" name="Controller" value="@Model.Controller"/></td>
                    </tr>
                    <tr>
                        <td>Action</td>
                        <td><input id="Action" class="easyui-textbox" name="Action" value="@Model.Action" /></td>
                    </tr>
                    <tr>
                        <td>父菜单:</td>
                        <td>
                            <input id="ParentKey" class="easyui-combobox" name="ParentKey" value="@Model.ParentKey"/>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <div style="text-align:center;padding:5px">
                                <a id="submit"href="javascript:void(0)" class="easyui-linkbutton">确定</a>
                                <a id="cancel"href="IndexQuery" class="easyui-linkbutton">取消</a>
                            </div>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </form>

       
</div>
@section script{
    <script src="~/LocalScript/Menu/IndexExecute.js"></script>
}